@model GestionEmployeeAppWeb.Models.Departements

@{
    ViewData["Title"] = "Create";
}

<h4 class="text-center"><i class="fas fa-plus-circle"></i> Nouveau Departement </h4>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="AddDepartement">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="DepId" />
                <input asp-for="DepartementName" class="form-control" />
                <span asp-validation-for="DepartementName" class="text-danger"></span>
            </div>
            <div class="form-group float-right">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-success"><i class="fas fa-arrow-circle-left"></i> Departements</a>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
